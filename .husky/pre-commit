#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Fix Prettier error
npm run format ||
(
    echo 'Prettier errors (format)';
    false;
)

# Check Prettier standards
npm run check-format ||
(
    echo 'Prettier errors (check)';
    false;
)

# Check ESLint Standards
npm run check-lint ||
(
        echo 'Eslint errors'
        false; 
)

# Check tsconfig standards
npm run check-types ||
(
    echo 'Ts errors'
    false;
)
